{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist/desktop",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
