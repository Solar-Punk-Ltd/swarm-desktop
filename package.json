{
  "name": "swarm-desktop",
  "productName": "Swarm Desktop",
  "author": {
    "name": "Swarm Association",
    "email": "info@ethswarm.org"
  },
  "version": "0.52.0",
  "description": "Desktop client for running and managing bee",
  "homepage": "https://desktop.ethswarm.org/",
  "repository": "https://github.com/ethersphere/swarm-desktop",
  "main": "dist/desktop/src/index.js",
  "scripts": {
    "start": "concurrently -n \"desktop,ui\" \"cross-env-shell NODE_ENV=development 'pnpm run clean && pnpm run build && electron-forge start'\" \"cd ui && pnpm start\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "publish:mac:arm64": "electron-forge publish --platform=darwin --arch=arm64",
    "publish:mac:x64": "electron-forge publish --platform=darwin --arch=x64",
    "publish:linux:arm64": "electron-forge publish --platform=linux --arch=arm64",
    "build:ui": "cd ui && pnpm run build && cd ..",
    "build:desktop": "tsc",
    "build": "pnpm run build:desktop && pnpm run build:ui && pnpm run copy:ui",
    "copy:ui": "node devkit.mjs copy:ui",
    "open:ui": "node devkit.mjs open:ui",
    "purge:data": "node devkit.mjs purge:data",
    "purge:logs": "node devkit.mjs purge:logs",
    "clean": "rimraf dist ui/build",
    "depcheck": "depcheck . && depcheck ui/",
    "lint": "eslint --fix \"src/**/*.ts\" && cd ui && pnpm run lint",
    "lint:check": "eslint \"src/**/*.ts\" && cd ui && pnpm run lint:check",
    "check:types": "tsc --project tsconfig.json --noEmit && cd ui && tsc --project tsconfig.json --noEmit",
    "test:unit": "jest --config=jest.config.ts --runInBand --verbose"
  },
  "keywords": [
    "bee",
    "swarm",
    "decentralised",
    "storage",
    "ethereum",
    "typescript",
    "p2p",
    "electron",
    "desktop"
  ],
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/publisher-github": "^7.11.1",
    "@types/cross-zip": "^4.0.2",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^5.0.2",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.5",
    "@types/node-fetch": "^3.0.2",
    "@types/node-notifier": "^8.0.5",
    "@types/opener": "^1.4.3",
    "@types/request-stats": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "concurrently": "^9.2.1",
    "cpy": "^13.0.0",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "electron": "^40.1.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^30.2.0",
    "open": "^11.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@ethereumjs/util": "^10.1.1",
    "@ethereumjs/wallet": "^10.0.0",
    "@ethersphere/bee-js": "^10.4.0",
    "@koa/router": "^15.3.0",
    "cross-zip": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "env-paths": "^4.0.0",
    "ethers": "^6.16.0",
    "fs-extra": "^11.3.3",
    "js-yaml": "^4.1.1",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-mount": "^4.2.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^3.3.2",
    "node-notifier": "^10.0.1",
    "opener": "^1.5.2",
    "request-stats": "^3.0.0",
    "rotating-file-stream": "^3.2.8",
    "update-electron-app": "^2.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "fs-xattr",
      "keccak",
      "macos-alias",
      "secp256k1",
      "unrs-resolver"
    ]
  }
}
